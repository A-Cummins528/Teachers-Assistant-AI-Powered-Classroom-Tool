<AnchorPane xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.teamalfred.controllers.AssessmentsViewController"
            prefWidth="1167.0" prefHeight="698.0" style="-fx-background-color: #25282c;">
   <children>
      <Label layoutX="40.0" layoutY="30.0" text="Assessments" textFill="WHITE">
         <font><Font name="Arial Bold" size="36.0"/></font>
      </Label>

      <ComboBox fx:id="sortComboBox" layoutX="40.0" layoutY="70.0" promptText="Sort by" prefWidth="200.0"/>
      <ComboBox fx:id="filterComboBox" layoutX="260.0" layoutY="70.0" promptText="Filter by Subject" prefWidth="200.0"/>

      <SplitPane layoutX="40.0" layoutY="100.0" prefWidth="1080.0" prefHeight="500.0" orientation="HORIZONTAL">
         <items>
            <!-- Left pane: List of subjects -->
            <VBox spacing="10" prefWidth="120.0" style="-fx-background-color: #2f3136;">
               <Label text="Subjects" textFill="WHITE"/>
               <ListView fx:id="subjectListView" />
            </VBox>

            <!-- Right pane: List of students -->
            <VBox spacing="10" prefWidth="830.0">
               <Label fx:id="studentsLabel" text="Select a subject to view students." textFill="WHITE"/>
               <TableView fx:id="studentsTable">
                  <columns>
                     <TableColumn fx:id="studentNameColumn" text="Student Name" prefWidth="300"/>
                     <TableColumn fx:id="emailColumn" text="Email" prefWidth="300"/>
                     <TableColumn fx:id="addAssessmentColumn" text="Actions" prefWidth="120.0" />
                  </columns>
               </TableView>

               <!-- New label + table for assessments -->
               <Label fx:id="assessmentsLabel" text="Assessments for selected student:" textFill="WHITE"/>
               <TableView fx:id="assessmentsTable" prefHeight="180.0">
                  <columns>
                     <TableColumn fx:id="assessmentTitleColumn" text="Title" prefWidth="200"/>
                     <TableColumn fx:id="assessmentSubjectColumn" text="Subject" prefWidth="150"/>
                     <TableColumn fx:id="assessmentDueColumn" text="Due Date" prefWidth="150"/>
                     <TableColumn fx:id="assessmentStatusColumn" text="Status" prefWidth="100"/>
                  </columns>
               </TableView>
            </VBox>
         </items>
      </SplitPane>


