<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.teamalfred.controllers.SettingsController"
            prefWidth="900" prefHeight="600">

    <HBox spacing="20" layoutX="20" layoutY="20">
        <!-- Sidebar menu -->
        <VBox spacing="20" alignment="TOP_CENTER" style="-fx-background-color: #16213E; -fx-padding: 20;"
              prefWidth="150">
            <Button text="Profile" prefWidth="150" onAction="#handleGoToProfile"
                    style="-fx-background-color: lightblue; -fx-text-fill: white; -fx-font-weight: bold;" />

            <Button text="Logout" prefWidth="150" onAction="#handleLogout"
                    style="-fx-background-color: #c0392b; -fx-text-fill: white; -fx-font-weight: bold;" />
        </VBox>

        <!-- Transparent placeholder content area next to the settings bar -->
        <Pane prefWidth="700" prefHeight="560" style="-fx-background-color: transparent; -fx-border-color: transparent;" />
    </HBox>

</AnchorPane>