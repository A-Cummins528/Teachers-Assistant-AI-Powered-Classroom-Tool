<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="698.0" prefWidth="1167.0" style="-fx-background-color: #25282c;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.teamalfred.controllers.AiFeatures.AiTutorController">
    <children>
        <Label layoutX="40.0" layoutY="30.0" text="Get study assistance using AI!" textFill="WHITE">
            <font>
                <Font name="Arial Bold" size="36.0" />
            </font>
        </Label>

        <Label layoutX="31.0" layoutY="90.0" text="Enter topic:" textFill="WHITE">
         <font>
            <Font size="24.0" />
         </font></Label>

        <TextField fx:id="topicTextField" layoutX="160.0" layoutY="95.0" prefWidth="400.0" promptText="Type your question or topic here" />

        <Button fx:id="generatePrompt" layoutX="580.0" layoutY="95.0" onAction="#onGeneratePromptClicked" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Send" />

        <Label layoutX="31.0" layoutY="139.0" prefWidth="1087.0" text="Please note: The AI Tutor does not have the ability to handle follow up requests; be specific on the content you would like to learn about." textFill="WHITE" wrapText="true">
         <font>
         </font></Label>

        <TextArea fx:id="outputArea" editable="false" layoutX="40.0" layoutY="178.0" prefHeight="510.0" prefWidth="1087.0" style="-fx-control-inner-background: #1c2832; -fx-text-fill: white; -fx-font-size: 14px;" wrapText="true" />
    </children>
</AnchorPane>
