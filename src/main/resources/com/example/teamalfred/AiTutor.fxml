<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="698.0" prefWidth="1167.0" style="-fx-background-color: #25282c;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.teamalfred.controllers.AiFeatures.AiTutorController">
    <children>
        <Label layoutX="40.0" layoutY="30.0" text="Get study assistance using AI!" textFill="WHITE">
            <font>
                <Font name="Arial Bold" size="36.0" />
            </font>
        </Label>

        <Label layoutX="40.0" layoutY="100.0" text="Enter topic:" textFill="WHITE">
            <font>
                <Font name="Arial" size="18.0" />
            </font>
        </Label>

        <TextField fx:id="topicTextField" layoutX="160.0" layoutY="95.0" prefWidth="400.0" promptText="Type your question or topic here" />

        <Button fx:id="generatePrompt" layoutX="580.0" layoutY="95.0" onAction="#onGeneratePromptClicked" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Send" />

        <Button fx:id="backToDashboardButton" layoutX="720.0" layoutY="95.0" onAction="#onBackToDashboardClicked" style="-fx-background-color: #f44336; -fx-text-fill: white;" text="Back to Dashboard" />

        <Label layoutX="40.0" layoutY="128.0" prefWidth="1087.0" text="Please note: The AI Tutor does not have the ability to handle follow up requests; be specific on the content you would like to learn about." textFill="WHITE" wrapText="true">
            <font>
                <Font name="Arial" size="14.0" />
            </font>
        </Label>

        <TextArea fx:id="promptOutputArea" editable="false" layoutX="40.0" layoutY="178.0" prefHeight="510.0" prefWidth="1087.0" style="-fx-control-inner-background: #1c2832; -fx-text-fill: white; -fx-font-size: 14px;" wrapText="true" />
    </children>
</AnchorPane>
