<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.teamalfred.controllers.AddAssessmentToSubjectController"
      style="-fx-padding: 20; -fx-background-color: #2e2e2e;">

    <TextField fx:id="titleField" promptText="Assessment Title"/>
    <ComboBox fx:id="typeComboBox" promptText="Type"/>
    <ComboBox fx:id="subjectComboBox" promptText="Subject"/>
    <DatePicker fx:id="dueDatePicker" promptText="Due Date"/>
    <Button text="Add to All Students" onAction="#handleSubmit"/>
</VBox>
